<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--TextView-->
    <style name="BasicTextView" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sc_dream_3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MediumTextView" parent="BasicTextView">
        <item name="android:fontFamily">@font/sc_dream_5</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LargeTextView" parent="BasicTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/sc_dream_7</item>
    </style>

    <style name="WarningHintTextView" parent="BasicTextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!--toolbar-->
    <style name="BasicToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/white</item>
        <item name="elevation">4dp</item>
    </style>

    <!--MaterialButton-->
    <style name="BasicMaterialButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="backgroundTint">@color/skyblue</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/sc_dream_3</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="MediumMaterialButton" parent="BasicMaterialButton">
        <item name="fontFamily">@font/sc_dream_5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="LargeMaterialButton" parent="BasicMaterialButton">
        <item name="fontFamily">@font/sc_dream_7</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="AddButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/light_dark_gray</item>
        <item name="android:fontFamily">@font/font_sc_dream_5</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="backgroundTint">@color/white</item>
        <item name="background">@color/white</item>
    </style>
    <!--EditText-->
    <style name="BasicEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_round_white</item>
        <item name="android:fontFamily">@font/sc_dream_3</item>
        <item name="android:textSize">14.5sp</item>
    </style>

    <style name="SingleLineEditText" parent="BasicEditText">
        <item name="singleLine">true</item>
        <item name="android:textSize">14.5sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
    </style>

    <!--Button-->
    <style name="BasicButton" parent="TextAppearance.AppCompat.Button">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="BasicButton.FloatingAction">
        <item name="android:fontFamily">@font/font_sc_dream_5</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="background">@color/white</item>
    </style>

</resources>
